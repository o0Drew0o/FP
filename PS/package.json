{
  "name": "ping-server",
  "version": "1.0.0",
  "description": "A simple server to ping other servers and keep them alive",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm-run-all clean prepare",
    "clean": "rm -rf dist",
    "prepare": "cp server.js dist/ && cp package.json dist/",
    "serve": "node dist/server.js"
  },
  "author": "o0Drew0o",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "npm-run-all": "^4.1.5"
  }
}
